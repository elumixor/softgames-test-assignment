{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "paths": {
      "@utils": ["./src/utils/index.ts"]
    }
  },
  "include": ["src"]
}
